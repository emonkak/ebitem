{
  "name": "@emonkak/ebit",
  "version": "0.0.0",
  "main": "lib/index.js",
  "exports": {
    ".": {
      "import": "./lib/index.js",
      "types": "./lib/index.d.ts"
    },
    "./directives.js": {
      "import": "./lib/directives.js",
      "types": "./lib/directives.d.ts"
    },
    "./signal.js": {
      "import": "./lib/signal.js",
      "types": "./lib/signal.d.ts"
    }
  },
  "type": "module",
  "author": "Shota Nozaki",
  "license": "MIT",
  "scripts": {
    "build": "tsc --build",
    "build:all": "pnpm run --include-workspace-root --recursive --parallel build",
    "clean": "tsc --build --clean",
    "clean:all": "pnpm run --include-workspace-root --recursive --parallel clean",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "watch": "tsc --build --watch --preserveWatchOutput",
    "watch:all": "pnpm run --include-workspace-root --recursive --parallel watch"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.1",
    "@vitest/browser": "^1.6.0",
    "@vitest/coverage-istanbul": "^1.6.0",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0",
    "webdriverio": "^8.38.2"
  }
}
